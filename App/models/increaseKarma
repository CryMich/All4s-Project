# increaseKarma.py
from .karmaCommand import KarmaCommand
from .karmaLog import KarmaLog

class IncreaseKarma(KarmaCommand):
    def __init__(self, user, points):
        super().__init__(user)
        self.points = points

    def execute(self):
        self.user.karma += self.points
        self.user.save()
        KarmaLog.objects.create(user=self.user, change=self.points, action='increase')